@model Product

<h2>Delete Product</h2>

<p>Apakah Anda yakin ingin menghapus produk ini?</p>

<div>
    <h4>Product Details:</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID:
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Nama:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Deskripsi:
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Harga:
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Gambar:
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/images/" + Model.Image)" alt="@Model.Name" width="100" height="100" />
        </dd>
        <dt class="col-sm-2">
            Stok:
        </dt>
        <dd class="col-sm-10">
            @Model.Stok
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
