

<style>

    body {
        font-family: Arial, sans-serif;
        margin: 0px;
        padding: 0px;
        background-color:darkturquoise;
        ;
        background-size: cover;
        color: white;
    }
    .card {
        width: 400px;
        margin: 100px auto;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        background-color: #fff;
    }

    .card-header {
        text-align: center;
        margin-bottom: 20px;
    }

        .card-header h3 {
            color: #333;
        }

    .card-body {
        padding: 0;
    }

    .form-control {
        width: calc(100% - 40px);
        margin: 10px 20px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    label {
        display: block;
        margin: 10px 20px 5px;
        font-weight: bold;
        color: #333;
    }

    .btn-primary {
        width: calc(100% - 40px);
        margin: 20px;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background-color: #007bff;
        color: #fff;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .alert {
        width: calc(100% - 40px);
        margin: 10px 20px 0;
        padding: 10px;
        border-radius: 5px;
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
    }
</style>

<body>

    <div class="card">
        <div class="card-header">
            <h3>Login</h3>
        </div>
        <div class="card-body">

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">
                    User tidak ditemukan atau password salah.
                </div>
            }

            <form method="post" action="Login">
                <label>Username</label>
                <input type="text" name="Username"
                       class="form-control" />

                <label>Password</label>
                <input type="password" name="Password"
                       class="form-control" />

                <button type="submit" class="btn btn-primary">
                    Login
                </button>
            </form>
        </div>
    </div>

</body>
